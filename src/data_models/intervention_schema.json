{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Therapeutic Intervention (Hormokine)",
  "description": "Standard definition of a synthetic biological agent generated by BioTwin AI.",
  "type": "object",
  "required": ["intervention_id", "molecule_type", "sequence_data", "target_profile"],
  "properties": {
    "intervention_id": {
      "type": "string",
      "description": "Unique identifier (UUID or Hash) for tracking.",
      "pattern": "^HK-[A-Z0-9-]+"
    },
    "molecule_type": {
      "type": "string",
      "enum": ["peptide", "protein", "mrna", "small_molecule"],
      "description": "The biological class of the intervention."
    },
    "sequence_data": {
      "type": "object",
      "required": ["primary_sequence"],
      "properties": {
        "primary_sequence": {
          "type": "string",
          "description": "Amino acid (protein) or Nucleotide (mRNA) sequence."
        },
        "folding_structure_pdb": {
          "type": "string",
          "description": "Optional: Path to the predicted 3D structure (PDB format)."
        }
      }
    },
    "architecture": {
      "type": "array",
      "description": "Functional domains of the engineered molecule.",
      "items": {
        "type": "object",
        "properties": {
          "domain_type": {
            "type": "string",
            "enum": ["addressing", "instruction", "timing", "penetration"]
          },
          "start_pos": { "type": "integer" },
          "end_pos": { "type": "integer" },
          "function_description": { "type": "string" }
        }
      }
    },
    "target_profile": {
      "type": "object",
      "required": ["cell_type", "receptor_target"],
      "properties": {
        "cell_type": {
          "type": "string",
          "description": "The specific cell population to target (e.g., 'hepatic_stellate_cell')."
        },
        "receptor_target": {
          "type": "string",
          "description": "Surface protein ID (e.g., 'TGFBR2')."
        },
        "expected_action": {
          "type": "string",
          "enum": ["agonist", "antagonist", "allosteric_modulator", "degradation"]
        }
      }
    },
    "predicted_properties": {
      "type": "object",
      "properties": {
        "binding_affinity_kd": {
          "type": "number",
          "description": "Dissociation constant in nanomolar (nM)."
        },
        "immunogenicity_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Probability of immune reaction (0 = Stealth, 1 = High Risk)."
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "generated_by": { "type": "string" },
        "generation_timestamp": { "type": "string", "format": "date-time" }
      }
    }
  }
}
